/* ==========================
   NORMALIZE & RESET
   ========================== */

*, *::before, *::after {
    box-sizing: border-box;
}

html {
    line-height: 1.15;
    -webkit-text-size-adjust: 100%;
}

body {
    margin: 0;
    font-family: 'Tilda Sans', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    font-size: 16px;
    line-height: 1.6;
    color: #333;
    background: #fff;
}

main {
    display: block;
}

h1, h2, h3, h4, h5, h6 {
    margin: 0;
    font-weight: 600;
}

p {
    margin: 0;
}

a {
    background-color: transparent;
    color: #0066cc;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

/* Icon spacing */
i {
    margin-right: 4px;
}

nav i,
.admin-nav i,
button i,
.button i {
    margin-right: 6px;
}

img {
    border-style: none;
    max-width: 100%;
    height: auto;
}

button, input, textarea, select {
    font-family: inherit;
    font-size: 100%;
    line-height: 1.15;
    margin: 0;
}

button {
    cursor: pointer;
}

/* ==========================
   LAYOUT
   ========================== */

.container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 20px;
}

.content {
    min-height: calc(100vh - 200px);
    padding: 40px 0;
}

/* ==========================
   HEADER
   ========================== */

header {
    border-bottom: 1px solid #e0e0e0;
    padding: 20px 0;
    margin-bottom: 40px;
}

header .site-logo {
    margin-bottom: 15px;
}

header .site-logo img {
    max-height: 80px;
    max-width: 300px;
    height: auto;
    display: block;
}

header h1 {
    font-size: 24px;
    margin-bottom: 5px;
}

header h1 a {
    color: #333;
    text-decoration: none;
}

header h1 a:hover {
    text-decoration: none;
}

header .subtitle {
    color: #666;
    font-size: 14px;
}

header nav {
    margin-top: 15px;
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
}

header nav a {
    color: #666;
    font-size: 14px;
}

header nav a:hover {
    color: #0066cc;
}

/* ==========================
   FOOTER
   ========================== */

footer {
    border-top: 1px solid #e0e0e0;
    padding: 20px 0;
    margin-top: 60px;
    color: #666;
    font-size: 14px;
}

footer a {
    color: #666;
    margin-left: 15px;
}

/* ==========================
   POSTS
   ========================== */

.post {
    margin-bottom: 60px;
    padding-bottom: 40px;
    border-bottom: 1px solid #f0f0f0;
}

.post:last-child {
    border-bottom: none;
}

.post h2 {
    font-size: 28px;
    margin-bottom: 10px;
}

.post h2 a {
    color: #333;
    text-decoration: none;
}

.post h2 a:hover {
    color: #0066cc;
}

.post-meta {
    color: #999;
    font-size: 14px;
    margin-bottom: 20px;
}

.post-meta a {
    color: #999;
}

.post-meta a:hover {
    color: #0066cc;
}

.post-content {
    margin-top: 20px;
}

/* Single post */
.post-single h1 {
    font-size: 32px;
    margin-bottom: 15px;
}

/* ==========================
   TYPOGRAPHY & MARKDOWN
   ========================== */

.post-content h1,
.post-content h2,
.post-content h3 {
    margin-top: 30px;
    margin-bottom: 15px;
}

.post-content h1 {
    font-size: 28px;
}

.post-content h2 {
    font-size: 24px;
}

.post-content h3 {
    font-size: 20px;
}

.post-content p {
    margin-bottom: 20px;
}

.post-content ul,
.post-content ol {
    margin: 20px 0;
    padding-left: 30px;
}

.post-content li {
    margin-bottom: 8px;
}

.post-content blockquote {
    margin: 20px 0;
    padding-left: 20px;
    border-left: 4px solid #e0e0e0;
    color: #666;
    font-style: italic;
}

.post-content code {
    background: #f5f5f5;
    padding: 2px 6px;
    border-radius: 3px;
    font-family: "Courier New", monospace;
    font-size: 14px;
}

.post-content pre {
    background: #f5f5f5;
    padding: 15px;
    border-radius: 5px;
    overflow-x: auto;
    margin: 20px 0;
}

.post-content pre code {
    background: none;
    padding: 0;
}

.post-content img {
    margin: 20px 0;
    border-radius: 5px;
}

/* ==========================
   COMMENTS
   ========================== */

.comments {
    margin-top: 60px;
    padding-top: 40px;
    border-top: 1px solid #e0e0e0;
}

.comments h3 {
    font-size: 20px;
    margin-bottom: 30px;
}

.comment {
    margin-bottom: 30px;
    padding: 20px;
    background: #f9f9f9;
    border-radius: 5px;
}

.comment-author {
    font-weight: 600;
    margin-bottom: 5px;
}

.comment-date {
    color: #999;
    font-size: 13px;
    margin-bottom: 10px;
}

.comment-content p {
    margin-bottom: 10px;
}

.comment-form {
    margin-top: 40px;
}

.comment-form h4 {
    font-size: 18px;
    margin-bottom: 20px;
}

/* ==========================
   FORMS
   ========================== */

.form-group {
    margin-bottom: 20px;
}

.form-group label {
    display: block;
    margin-bottom: 5px;
    font-weight: 500;
}

.form-group input[type="text"],
.form-group input[type="email"],
.form-group input[type="password"],
.form-group textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
}

.form-group textarea {
    min-height: 150px;
    resize: vertical;
}

button, .button {
    padding: 10px 20px;
    background: #0066cc;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
}

button:hover, .button:hover {
    background: #0052a3;
    text-decoration: none;
}

/* ==========================
   ADMIN
   ========================== */

.admin-nav {
    background: #f5f5f5;
    padding: 15px 0;
    margin-bottom: 30px;
}

.admin-nav nav {
    display: flex;
    gap: 20px;
    margin: 0;
}

.message {
    padding: 15px;
    margin-bottom: 20px;
    border-radius: 5px;
}

.message.success {
    background: #d4edda;
    color: #155724;
}

.message.error {
    background: #f8d7da;
    color: #721c24;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
}

table th,
table td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #e0e0e0;
}

table th {
    font-weight: 600;
    background: #f9f9f9;
}

table tr:hover {
    background: #f9f9f9;
}

.post-actions {
    display: flex;
    gap: 10px;
}

/* ==========================
   PAGINATION
   ========================== */

.pagination {
    display: flex;
    gap: 10px;
    justify-content: center;
    margin: 40px 0;
}

.pagination a,
.pagination span {
    padding: 8px 15px;
    border: 1px solid #ddd;
    border-radius: 5px;
}

.pagination a:hover {
    background: #f5f5f5;
    text-decoration: none;
}

/* ==========================
   UTILITY
   ========================== */

.text-center {
    text-align: center;
}

.mt-20 {
    margin-top: 20px;
}

.mb-20 {
    margin-bottom: 20px;
}

.hidden {
    display: none;
}

.empty-state {
    text-align: center;
    padding: 60px 20px;
    color: #999;
}

/* ==========================
   Fotorama Gallery
   ========================== */

.fotorama__wrap {
    margin: 30px 0;
}

.post-content .fotorama {
    margin: 30px auto;
}

.fotorama__caption {
    font-size: 14px;
    color: #666;
    text-align: center;
    padding: 10px;
}
